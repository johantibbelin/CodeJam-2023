INLINE asm%,2048
' *---------------------------------*
'
'
CLS
' low
init
DIM regs%(16)
ARRAYFILL regs%(),0
' RCALL asm%,regs%()
' ~INP(2)
test_field
test_master
test_draw_master
color_boxes
~INP(2)
uninit
' medium
END
PROCEDURE init
  DIM field|(7,12),master|(7),correct|(7,12)
  SETCOLOR 0,&H0
  SETCOLOR 15,&HFFF
RETURN
PROCEDURE uninit
  SETCOLOR 0,&HFFF
  SETCOLOR 15,&H0
RETURN
PROCEDURE test_field
  FOR r%=1 TO 12
    FOR c%=1 TO 4
      CIRCLE c%*14,r%*14,6
    NEXT c%
  NEXT r%
RETURN
PROCEDURE test_master
  ' random
  RANDOMIZE
  FOR i%=0 TO 6
    master|(i%)=INT(RND(0)*6)+1
    '    PRINT master|(i%);",";
  NEXT i%
RETURN
PROCEDURE test_draw_master
  FOR c%=1 TO 4
    DEFFILL master|(c%-1)
    PCIRCLE c%*14,199-14,6
  NEXT c%
RETURN
PROCEDURE compare
RETURN
PROCEDURE turn
RETURN
PROCEDURE low
  LOCAL scr%
  scr%=XBIOS(2)
  ~XBIOS(5,L:scr%,L:scr%,0)
  CLS
RETURN
PROCEDURE medium
  LOCAL scr%
  scr%=XBIOS(2)
  ~XBIOS(5,L:scr%,L:scr%,1)
  CLS
RETURN
PROCEDURE color_boxes
  FOR c%=0 TO 6
    DEFFILL c%
    PBOX 90+30*c%,175,90+30*c%+25,180
  NEXT c%
RETURN
